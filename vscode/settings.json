{
  // RUBY SETTINGS
  "gemRoot": "${env:GEM_HOME}/bin/",
  "rubyRoot": "${env:RUBY_ROOT}/bin",
  "rubocop.executePath": "${env:GEM_HOME}/bin/rubocop",
  "ruby.codeCompletion":  true,
  "ruby.useLanguageServer": true,
  "ruby.format": "rubocop",
  "ruby.rubocop.configFilePath": "/Users/phillipmuldoon/dev/freeagent/.rubocop.yml",
  "ruby.intellisense": "rubyLocate",
  "ruby.linter.executablePath": "${env:RUBY_ROOT}/bin/ruby",
  "ruby.interpreter.commandPath": "${env:RUBY_ROOT}/bin/ruby",
  // Basic settings: turn linter(s) on
  "ruby.lint": {
    "rubocop": {
      "lint": true, // enable lint cops
      "rails": true // requires rubocop-rails gem for RuboCop >= 0.72.0
    }
  },

  // Time (ms) to wait after keypress before running enabled linters. Ensures
  // linters are only run when typing has finished and not for every keypress
  "ruby.lintDebounceTime": 500,

  // VISUAL
  "editor.tabSize": 2,
  "editor.wordBasedSuggestions": false,
  "editor.cursorStyle": "block",
  "editor.cursorWidth": 50,
  "editor.cursorBlinking":  "phase",
  "editor.renderWhitespace": "selection",
  "editor.lineHeight": 0,
  "editor.fontWeight": "normal",
  "editor.fontFamily": "Hack",
  "editor.fontSize": 22,
  "editor.fontLigatures": true,
  "editor.showFoldingControls": "always",
  "editor.formatOnSave": false,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.acceptSuggestionOnEnter": "on",
  "window.zoomLevel": 1,

  "workbench.sideBar.location": "left",
  "workbench.fontAliasing": "antialiased",
  "workbench.enableExperiments": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "vscode-great-icons",

  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "debug.console.fontFamily": "Hack",
  "debug.console.fontSize": 22,
  "debug.inlineValues": true,
  "debug.enableAllHovers": true,
  "debug.focusWindowOnBreak": true,

  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",

  // Terminal
  "terminal.integrated.fontFamily": "Hack",
  "terminal.integrated.fontSize": 22,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.enableBell": false,
  "terminal.integrated.confirmOnExit": false,
  "terminal.integrated.enableFileLinks": true,
  "terminal.integrated.shell.linux": "/bin/zsh",

  "search.showLineNumbers": true,

  "solargraph.commandPath": "solargraph",
  "solargraph.formatting": true,
  "solargraph.definitions": true,
  "solargraph.references": true,
  "solargraph.hover": true,
  "solargraph.completion": true,
  "solargraph.diagnostics": true,


  "gitlens.currentLine.enabled": false, // in modern version
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,

  // FORMATTING
  "beautify.language": {
    "js": {
      "type": ["javascript", "json"],
      "filename": [".jshintrc", ".jsbeautifyrc"]
    },
    "css": ["css", "scss"],
    "html": {
      "type": ["htm", "html"],
      "filename": [".html.eex", ".html.leex", ".html.erb", ".html"]
    }
  },

  "[markdown]": {
    "editor.trimAutoWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true
  },
  "[scss]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en-gb",
  "cSpell.enabledFileTypesanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "go",
    "handlebars",
    "html",
    "jade",
    "javascript",
    "javascriptreact",
    "json",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pub",
    "python",
    "restructuredtext",
    "ruby",
    "rust",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "cSpell.words": [
    "BCSG",
    "FAPD",
    "FAPDRBSG",
    "RBSG",
    "REENABLED",
    "arel",
    "camelize",
    "inactived",
    "parameterize",
    "titleize"
    "dokku",
    "enrolments",
    "espcn",
    "language",
    "muahaha",
    "open",
    "postgresql",
    "rcodetools",
    "readline",
    "rsense",
    "rubocop",
    "signup",
    "strftime",
    "struct",
    "touchpad",
    "uncomment",
    "upcase",
    "vardy"
  ],
}

