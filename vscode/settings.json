{
  "workbench.colorTheme": "Dracula At Night" ,
  "outline.icons": true,
  "breadcrumbs.icons": true,
  "workbench.preferredDarkColorTheme": "Default Dark+",

  // RUBY SETTINGS
  "rubocop.executePath": "${env:GEM_HOME}/bin/rubocop",
  "ruby.useLanguageServer": true,
  "ruby.format": "rubocop",
  "ruby.rubocop.configFilePath": "/Users/phillipmuldoon/dev/freeagent/.rubocop.yml",
  "ruby.intellisense": "rubyLocate",
  "ruby.interpreter.commandPath": "${env:RUBY_ROOT}/bin/ruby",
  // Basic settings: turn linter(s) on
  "ruby.lint": {
    "rubocop": {
      "lint": true, // enable lint cops
      "rails": true // requires rubocop-rails gem for RuboCop >= 0.72.0
    }
  },

  // Time (ms) to wait after keypress before running enabled linters. Ensures
  // linters are only run when typing has finished and not for every keypress
  "ruby.lintDebounceTime": 500,

  // Editor
  "editor.tabSize": 2,
  "editor.lineNumbers": "on",
  "editor.detectIndentation": true,
  "editor.lightbulb.enabled": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.wordBasedSuggestions": false,
  "editor.cursorStyle": "block",
  "editor.cursorWidth": 50,
  "editor.cursorBlinking":  "phase",
  "editor.renderWhitespace": "selection",
  "editor.lineHeight": 0,
  "editor.fontWeight": "normal",
  "editor.fontFamily": "Hack",
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.showFoldingControls": "always",
  "editor.formatOnSave": false,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.renderIndentGuides": true,
  "editor.codeLens": true,
  "editor.colorDecorators": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.matchBrackets": "always",
  "editor.highlightActiveIndentGuide": true,
  "editor.minimap.renderCharacters": true,
  "editor.minimap.enabled": true,
  "editor.overviewRulerBorder": true,
  "editor.smoothScrolling": true,
  "editor.occurrencesHighlight": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.roundedSelection": true,
  "editor.rulers": [
    80,
    120
  ],

  // Windows
  "window.zoomLevel": 2,

  // Workbench
  "workbench.sideBar.location": "left",
  "workbench.fontAliasing": "antialiased",
  "workbench.enableExperiments": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.activityBar.visible": true,
  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "breadcrumbs.enabled": true,

  // Debugger
  "debug.console.fontFamily": "Hack",
  "debug.console.fontSize": 16,
  "debug.inlineValues": true,
  "debug.enableAllHovers": true,
  "debug.focusWindowOnBreak": true,

  // Files
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",

  // Terminal
  "terminal.integrated.fontFamily": "Hack",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.enableBell": false,
  "terminal.integrated.confirmOnExit": false,
  "terminal.integrated.enableFileLinks": true,
  "terminal.integrated.shell.linux": "/bin/zsh",

  // Solargraph
  "search.showLineNumbers": true,
  "solargraph.rename": true,
  "solargraph.symbols": true,
  "solargraph.commandPath": "solargraph",
  "solargraph.formatting": true,
  "solargraph.definitions": true,
  "solargraph.references": true,
  "solargraph.hover": true,
  "solargraph.completion": true,
  "solargraph.diagnostics": true,

  // Gitlens
  "gitlens.currentLine.enabled": false, // in modern version
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,

  // Other file defaults.
  "[markdown]": {
    "editor.trimAutoWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true
  },
  "[scss]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  // Spelling
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en-GB",
  "cSpell.enabledFileTypes": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "go",
    "handlebars",
    "html",
    "jade",
    "javascript",
    "javascriptreact",
    "json",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pub",
    "python",
    "restructuredtext",
    "ruby",
    "rust",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "cSpell.words": [
    "BCSG",
    "FAPD",
    "FAPDRBSG",
    "RBSG",
    "REENABLED",
    "arel",
    "camelize",
    "inactived",
    "parameterize",
    "titleize",
    "dokku",
    "enrolments",
    "espcn",
    "language",
    "muahaha",
    "open",
    "postgresql",
    "rcodetools",
    "readline",
    "rsense",
    "rubocop",
    "signup",
    "strftime",
    "struct",
    "touchpad",
    "uncomment",
    "upcase",
    "vardy",
    "HUMIO"

  ],
  "sync.autoDownload": true,
  "sync.autoUpload": true,
  "sync.gist": "bb59b15f7b87a4d1435bd3399db6ed09",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "[ruby]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  },
  "errorLens.addAnnotationTextPrefixes": true,
  "errorLens.addNumberOfDiagnostics": true,
  "scm.alwaysShowActions": true,
  "scm.alwaysShowProviders": true,
  "workbench.tree.renderIndentGuides": "always",
  "tabnine.experimentalAutoImports": true,
  "editor.multiCursorModifier": "ctrlCmd",
}

